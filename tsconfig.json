{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["dom", "esnext"],       // Add 'dom' for JSX and browser APIs
    "jsx": "react-jsx",             // Enable JSX support for React
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,              // Enable composite mode for referenced projects
    "noEmit": false                 // Allow emitting declaration files
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
