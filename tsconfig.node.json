{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "jsx": "react-jsx",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": false,                     // Needed for project reference build

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Node.js types */
    "types": ["node"]                   // Ensure Node.js types are included
  },
  "include": [
    "vite.config.ts",                   // Include the Vite config for Node.js
    "src/**/*.ts",                      // Include all TypeScript files in the src folder
    "src/**/*.tsx"                      // Include all TSX files in the src folder for React
  ]
}
