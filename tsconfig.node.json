{
  "compilerOptions": {
    "composite": true,          // Enable composite mode for references
    "declaration": true,        // Ensure declaration files are generated
    "target": "esnext",
    "lib": ["dom", "esnext"],   // Add 'dom' for JSX and browser APIs
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "noEmit": false             // Allow emitting declaration files
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts"
  ]
}
