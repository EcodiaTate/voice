{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2023",
    "lib": ["ES2023", "node"],   // Add node library for Node.js types
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Node.js specific settings */
    "types": ["node"]  // Include Node.js types for environment variables and other Node-specific types
  },
  "include": [
    "vite.config.ts",           // Your Vite config file
    "src/**/*.ts",              // If you have any other Node-related files
    "src/**/*.tsx"
  ]
}
